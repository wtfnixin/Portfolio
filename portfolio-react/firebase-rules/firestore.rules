rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAdmin() {
      return request.auth != null;
    }

    // Projects: Public read, Admin write
    match /projects/{projectId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Messages: Admin read, Public write (to send messages), Admin delete (optional)
    match /messages/{messageId} {
      // Depending on requirements:
      // If messages are submitted via public form -> allow create: if true;
      // If messages are just read by admin -> allow read: if isAdmin();
      // Assuming public form submission:
      allow create: if true;
      allow read, delete: if isAdmin();
    }

    // About/Profile: Public read, Admin write
    match /about/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
